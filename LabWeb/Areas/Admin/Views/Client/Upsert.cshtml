<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">@(Model.Client.Id != 0 ? "Update" : "Create") Client</h2>
            </div>
        </div>
    </div>
    <div class=" card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Client.Id" hidden />
            <input asp-for="Client.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3 mt-4">

                        @* <div class="text-danger" asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Client.CName" class="form-control border-0 shadow" />
                            <label asp-for="Client.CName" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Client.CName" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Client.Mobile" class="form-control border-0 shadow" />
                            <label asp-for="Client.Mobile" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Client.Mobile" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Client.Dist" class="form-control border-0 shadow" />
                            <label asp-for="Client.Dist" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Client.Dist" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Client.Pos" class="form-control border-0 shadow" />
                            <label asp-for="Client.Pos" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Client.Pos" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Client.Pin" class="form-control border-0 shadow" />
                            <label asp-for="Client.Pin" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Client.Pin" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Client.LandMark" class="form-control border-0 shadow" />
                            <label asp-for="Client.LandMark" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Client.LandMark" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Client.Total" class="form-control border-0 shadow text-dark" />
                            <label class="ms-2">Total Price</label>
                            <span asp-validation-for="Client.Total" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Client.OfficerId" asp-items="@Model.OfficerList" class="form-select text-dark border-0 shadow">
                                <option disabled selected>--Select Officer Name--</option>
                            </select>
                            <label asp-for="Client.OfficerId" class="ms-2"></label>
                            <span asp-validation-for="Client.OfficerId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Client.ImageUrl" class="ms-2 text-dark"></label>
                            <span asp-validation-for="Client.ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Client.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary text-dark form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary  text-dark form-control">Create</button>
                                }

                            </div>
                            <div class=" col-6 col-md-3">
                                <a asp-controller="Client" asp-action="Index" class="btn btn-outline-primary text-dark border form-control">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Client.ImageUrl" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>
        </form>
    </div>
</div>


