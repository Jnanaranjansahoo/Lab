
@model Client


<div class="card shadow border-0 m-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Client</h2>
            </div>
        </div>
    </div>
    <div class=" card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />

            <div class="border p-3">


                <div class="form-floating py-2 col-12">
                    <input asp-for="CName" class="form-control border-0 shadow" />
                    <label asp-for="CName" class="ms-2 text-dark"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Mobile" class="form-control border-0 shadow" />
                    <label asp-for="Mobile" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Dist" class="form-control border-0 shadow" />
                    <label asp-for="Dist" class="ms-2 text-dark"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Pos" class="form-control border-0 shadow" />
                    <label asp-for="Pos" class="ms-2 text-dark"></label>
             
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Pin" class="form-control border-0 shadow" />
                    <label asp-for="Pin" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="LandMark" class="form-control border-0 shadow" />
                    <label asp-for="LandMark" class="ms-2 text-dark"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Total" class="form-control border-0 shadow text-dark" />
                    <label class="ms-2">Total Price</label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.OfficerId" class="form-select text-dark border-0 shadow">
                        <option disabled selected>--Select Officer Name--</option>
                    </select>
                    <label asp-for="OfficerId" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="file" name="file" class="form-control border-0 shadow" />
                    <label asp-for="ImageUrl" class="ms-2 text-dark"></label>
                   
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class=" col-6 col-md-3">
                        <a asp-controller="Client" asp-action="Index" class="btn btn-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




